@model ProyectoASPWEB.Models.producto_compra

@{
    ViewBag.Title = "Details";
}

<h2>Detalle de Producto Compra</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Compra
        </dt>

        <dd>
            @ProyectoASPWEB.Controllers.Producto_CompraController.NombreCompra(Model.id_compra)
        </dd>

        <dt>
            Producto
        </dt>

        <dd>
            @ProyectoASPWEB.Controllers.Producto_CompraController.NombreProducto(Model.id_producto)
        </dd>

        <dt>
            Cantidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar Producto Compra", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Regresar a la lista", "Index")
</p>
