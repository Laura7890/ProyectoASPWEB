@model IEnumerable<ProyectoASPWEB.Models.producto_compra>

@{
    ViewBag.Title = "Index";
}

<h2>Todas las Compras Producto</h2>

<p>
    @Html.ActionLink("Crear nueva compra producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Id Compra
        </th>
        <th>
            Producto
        </th>
        <th>
            Cantidad
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @ProyectoASPWEB.Controllers.Producto_CompraController.NombreCompra(item.id_compra)
            </td>
            <td>
                @ProyectoASPWEB.Controllers.Producto_CompraController.NombreProducto(item.id_producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿ Esta seguro de eliminar ?')) {
                event.preventDefault();
            }
        })
    </script>
}

