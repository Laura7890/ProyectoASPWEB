@model IEnumerable<ProyectoASPWEB.Models.usuariorol>

@{
    ViewBag.Title = "Index";
}

<h2>Todos los Usuarios Roles</h2>

<p>
    @Html.ActionLink("Nuevo Usuario Rol", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Rol
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @ProyectoASPWEB.Controllers.UsuarioRolController.NombreUsuarioRol(item.idUsuario)
            </td>
            <td>
                @ProyectoASPWEB.Controllers.UsuarioRolController.NombreRol(item.idRol)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id } , new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿ Esta seguro de eliminar ?')) {
                event.preventDefault();
            }
        })
    </script>
}
