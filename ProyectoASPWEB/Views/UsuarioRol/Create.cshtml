@model ProyectoASPWEB.Models.usuariorol

@{
    ViewBag.Title = "Create";
}

<h2>Nuevo Usuario Rol</h2>
<p>En este formulario podras registrar un nuevo Usuario Rol</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="id_usuario">Usuario</label>
            <div class="col-md-10">
                @Html.Action("ListarUsuarioRol")
                @Html.ValidationMessageFor(model => model.idUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="id_cliente">Cliente</label>
            <div class="col-md-10">
                @Html.Action("ListarRol")
                @Html.ValidationMessageFor(model => model.idRol, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>
