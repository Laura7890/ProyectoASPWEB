@model ProyectoASPWEB.Models.producto

@{
    ViewBag.Title = "Details";
    var nombreProducto = Model.nombre;
}

<h2>Detalles del Producto: @nombreProducto</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre Producto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
           Precio Unitario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.percio_unitario)
        </dd>

        <dt>
            Descripción
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            Cantidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dt>
            Proveedor
        </dt>

        <dd>
            @ProyectoASPWEB.Controllers.ProductoController.NombreProveedor(Model.id_proveedor)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<p>
    @Html.ActionLink("Editar el Producto:" + nombreProducto, "Edit", new { id = Model.id }) |
    @Html.ActionLink("Regresar a la lista", "Index")
</p>
    }
</div>
