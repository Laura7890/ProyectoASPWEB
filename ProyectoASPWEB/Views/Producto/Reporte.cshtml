@model IEnumerable<ProyectoASPWEB.Models.Reporte>

@{
    ViewBag.Title = "Reporte";
}

<h2>Reporte Proveedores - Productos</h2>

<table class="table">
    <tr>
        <th>Proveedor</th>
        <th>Telefono Proveedor</th>
        <th>Direccion Proveedor</th>
        <th>Producto</th>
        <th>Producto Precio</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.nombreProveedor)</td>
            <td>@Html.DisplayFor(modelItem => item.telefonoProveedor)</td>
            <td>@Html.DisplayFor(modelItem => item.direccionProveedor)</td>
            <td>@Html.DisplayFor(modelItem => item.nombreProducto)</td>
            <td>@Html.DisplayFor(modelItem => item.precioProducto)</td>
        </tr>
    }
</table>

<img src="https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/pullandbear000-1539073971.jpg?crop=1xw:1xh;center,top&resize=640:*" alt="Productos de Pull and Bear" title="Prendas de Pull and Bear"/>
<br />
<p style="margin-top: 30px"> Este es el reporte de varios productos de pull and bear y la información de los proveedores.</p>

@Html.ActionLink("Generar Reporte", "ImprimirReporte", "Producto")