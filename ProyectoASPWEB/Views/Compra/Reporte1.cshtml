@model IEnumerable<ProyectoASPWEB.Models.Reporte1>


@{
    ViewBag.Title = "Reporte1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reporte Cliente - Compra</h2>

<table class="table">
    <tr>
        <th>Cliente</th>
        <th>Documento Cliente</th>
        <th>Correo Cliente</th>
        <th>Fecha Compra</th>
        <th>Compra Total</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.nombreCliente)</td>
            <td>@Html.DisplayFor(modelItem => item.documentoCliente)</td>
            <td>@Html.DisplayFor(modelItem => item.emailCliente)</td>
            <td>@Html.DisplayFor(modelItem => item.fechaCompra)</td>
            <td>@Html.DisplayFor(modelItem => item.totalCompra)</td>
        </tr>
    }
</table>

<img src="https://fastly.4sqi.net/img/general/600x600/51312147_5EsroS0QTnxnetTwHyh8hU4-Q3UH-ehxFUyJqbObJY8.jpg" alt="Bolsa Pull and Bear" title="Bolsa de clientes Pull and Bear"/>
<br />
<p style="margin-top: 30px"> Este es el reporte de los clientes de pull and bear y la información de sus compras.</p>

@Html.ActionLink("Generar Reporte", "ImprimirReporte1", "Compra")

